{
  "api_documentation": {
    "title": "FOP Job Platform API Documentation",
    "description": "RESTful API for job seekers, societies, jobs, events, and dashboard functionality with secure authentication",
    "base_url": "/api",
    "version": "2.0.0"
  },
  "authentication": {
    "POST /api/tokens": {
      "description": "Authenticate user and get JWT token",
      "methods": ["POST"],
      "request_body": {
        "email": "string (required)",
        "password": "string (required)"
      },
      "success_response": {
        "status": 201,
        "body": {
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
          "user": {
            "id": 1,
            "email": "user@example.com",
            "type": "jobseeker"
          }
        }
      }
    }
  },
  "jobseekers": {
    "description": "Manage job seeker profiles with secure password handling",
    "methods": ["GET", "POST", "PATCH", "DELETE"],
    "endpoints": {
      "GET /api/jobseekers": "Get all jobseekers",
      "POST /api/jobseekers": "Create new jobseeker",
      "GET /api/jobseekers/:id": "Get specific jobseeker",
      "PATCH /api/jobseekers/:id": "Update jobseeker",
      "DELETE /api/jobseekers/:id": "Delete jobseeker"
    },
    "example_response": {
      "status": 201,
      "body": {
        "newJobseeker": {
          "jobseeker_id": 1,
          "first_name": "John",
          "last_name": "Doe",
          "email": "john.doe@example.com",
          "phone_number": "+1234567890",
          "education_level": "undergraduate",
          "institution_name": "University College London",
          "uni_year": "3rd",
          "degree_type": "bsc",
          "area_of_study": "Computer Science",
          "role_interest_option_one": "Software Developer",
          "role_interest_option_two": "Data Scientist",
          "created_at": "2025-01-10T18:00:00.000Z"
        }
      }
    }
  },
  "societies": {
    "description": "Manage university society profiles",
    "methods": ["GET", "POST", "PATCH", "DELETE"],
    "endpoints": {
      "GET /api/societies": "Get all societies",
      "POST /api/societies": "Create new society",
      "GET /api/societies/:id": "Get specific society",
      "PATCH /api/societies/:id": "Update society",
      "DELETE /api/societies/:id": "Delete society"
    },
    "example_response": {
      "status": 201,
      "body": {
        "newSociety": {
          "society_id": 1,
          "name": "Tech Society",
          "university": "University College London",
          "description": "A community for technology enthusiasts",
          "email": "tech@ucl.ac.uk",
          "created_at": "2025-01-10T18:00:00.000Z"
        }
      }
    }
  },
  "jobs": {
    "description": "Job listings with advanced filtering and search capabilities",
    "methods": ["GET", "POST", "PATCH", "DELETE"],
    "endpoints": {
      "GET /api/jobs": "Get all jobs",
      "POST /api/jobs": "Create new job",
      "GET /api/jobs/:id": "Get specific job",
      "PATCH /api/jobs/:id": "Update job",
      "DELETE /api/jobs/:id": "Delete job",
      "GET /api/jobs/search": "Advanced job search with filters",
      "GET /api/jobs/filters": "Get available filter options"
    },
    "example_response": {
      "status": 200,
      "body": {
        "jobs": [
          {
            "job_id": 1,
            "title": "Software Engineer",
            "company": "TechCorp",
            "description": "Join our innovative team...",
            "industry": "Technology",
            "location": "London",
            "job_level": "Junior",
            "role_type": "Full-time",
            "salary": "£35,000 - £45,000",
            "deadline": "2025-02-15",
            "applicant_count": 25,
            "created_at": "2025-01-10T18:00:00.000Z"
          }
        ]
      }
    }
  },
  "events": {
    "description": "Event listings with advanced filtering and search capabilities",
    "methods": ["GET", "POST", "PATCH", "DELETE"],
    "endpoints": {
      "GET /api/events": "Get all events",
      "POST /api/events": "Create new event",
      "GET /api/events/:id": "Get specific event",
      "PATCH /api/events/:id": "Update event",
      "DELETE /api/events/:id": "Delete event",
      "GET /api/events/search": "Advanced event search with filters",
      "GET /api/events/filters": "Get available filter options"
    },
    "example_response": {
      "status": 200,
      "body": {
        "events": [
          {
            "event_id": 1,

  "society_dashboard": {
    "description": "Dashboard for societies to manage saved jobs and events (posting is admin-only)",
    "methods": ["GET", "POST", "DELETE"],
    "endpoints": {
      "GET /api/societies/:id/dashboard": "Get society dashboard with saved jobs and events",
      "GET /api/societies/:id/saved-jobs": "Get jobs saved by society",
      "GET /api/societies/:id/saved-events": "Get events saved by society",
      "POST /api/societies/:id/save-job/:job_id": "Save a job to society favorites",
      "POST /api/societies/:id/save-event/:event_id": "Save an event to society favorites",
      "DELETE /api/societies/:id/save-job/:job_id": "Remove saved job",
      "DELETE /api/societies/:id/save-event/:event_id": "Remove saved event"
    },
    "example_response": {
      "status": 200,
      "body": {
        "saved_jobs": [
          {

      }
    }
  },
  "jobseeker_dashboard": {
    "description": "Personalized dashboard for job seekers to manage applications and saved items",
    "methods": ["GET", "POST", "DELETE"],
    "endpoints": {
      "GET /api/jobseekers/:id/dashboard": "Get jobseeker dashboard with applied and saved jobs",
      "GET /api/jobseekers/:id/full-dashboard": "Get full dashboard with jobs and events",
      "GET /api/jobseekers/:id/applied-jobs": "Get applied jobs only",
      "GET /api/jobseekers/:id/saved-jobs": "Get saved jobs only",
      "GET /api/jobseekers/:id/applied-events": "Get applied events only",
      "GET /api/jobseekers/:id/saved-events": "Get saved events only",
      "POST /api/jobseekers/:id/apply/:job_id": "Apply for a job",
      "POST /api/jobseekers/:id/save/:job_id": "Save a job",
      "POST /api/jobseekers/:id/apply-event/:event_id": "Apply for an event",
      "POST /api/jobseekers/:id/save-event/:event_id": "Save an event",
      "DELETE /api/jobseekers/:id/save/:job_id": "Remove saved job",
      "DELETE /api/jobseekers/:id/save-event/:event_id": "Remove saved event"
    },
    "example_response": {
